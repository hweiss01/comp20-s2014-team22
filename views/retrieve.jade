extends layout

block content
	script(type='text/javascript').
	div.container
		.clear
			.right
				canvas.chart
			.left
				h1= 'Total Amount Spent: ' + total
		div.panel.panel-default
			div.panel-heading
				table.table.table-striped.table-bordered
					thead
						tr
							th Website
							th Date
							th Total
					tbody
						each item in purchases
							tr
								td= item.website
								td= item.date
								td= item.price